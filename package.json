{
    "name": "dnd-tracker",
    "version": "0.1.1",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "prepare": "husky install",
        "build": "next build",
        "start": "next start",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-pattern 'specs/**'",
        "lint:fix": "npm run lint -- --fix",
        "lint:markdown": "markdownlint '**/*.md' --ignore 'node_modules' --ignore 'test-results/**' --ignore 'playwright-report/**'",
        "lint:markdown:fix": "npm run lint:markdown -- --fix",
        "type-check": "tsc --noEmit",
        "test": "jest --watch",
        "test:ci:unit": "jest --config=jest.config.js --ci --coverage --maxWorkers=2",
        "test:ci:integration": "jest --config=jest.integration.config.js --ci --runInBand",
        "test:ci": "npm run test:ci:unit && npm run test:ci:integration",
        "test:ci:parallel": "jest --ci --coverage --maxWorkers=50%",
        "test:coverage": "jest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "migrate": "node scripts/migrate.js",
        "deploy": "flyctl deploy"
    },
    "dependencies": {
        "@clerk/nextjs": "^6.35.2",
        "@clerk/react": "^5.54.0",
        "@radix-ui/react-slot": "^1.2.3",
        "bson": "^5.4.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "lucide-react": "^0.468.0",
        "mongoose": "^8.19.1",
        "next": "16.0.1",
        "next-themes": "^0.4.4",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "tailwind-merge": "^2.5.5",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-react": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.0",
        "@jest/globals": "^30.2.0",
        "@playwright/test": "^1.56.1",
        "@tailwindcss/postcss": "^4.1.16",
        "@testcontainers/mongodb": "^10.1.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.2",
        "@types/react": "^19.0.6",
        "@types/react-dom": "^19.0.2",
        "@types/uuid": "^10.0.0",
        "@types/web": "^0.0.294",
        "@typescript-eslint/eslint-plugin": "^8.19.1",
        "@typescript-eslint/parser": "^8.19.1",
        "axe-playwright": "^2.2.2",
        "babel-jest": "^30.2.0",
        "baseline-browser-mapping": "^2.8.32",
        "eslint": "^9.17.0",
        "eslint-config-next": "16.0.1",
        "fake-indexeddb": "^5.0.2",
        "husky": "^8.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "markdownlint-cli": "^0.46.0",
        "postcss": "^8.4.49",
        "prettier": "^3.4.2",
        "tailwindcss": "^4.0.0",
        "tailwindcss-animate": "^1.0.7",
        "testcontainers": "^10.1.0",
        "ts-jest": "^29.2.5",
        "typescript": "5.9.2"
    }
}
